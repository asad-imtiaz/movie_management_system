<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email, class: "control-label col-md-2" %>
    <div class="col-md-4">
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :password, class: "control-label col-md-2"%>
    <div class="col-md-4">
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %><span class="help-block">leave blank if you don't want to change it</span>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Confirm password", class: "control-label col-md-2" %>
    <div class="col-md-4">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :first_name, class: "control-label col-md-2" %>
    <div class="col-md-4">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :last_name, class: "control-label col-md-2" %>
    <div class="col-md-4">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :date_of_birth, class: "control-label col-md-2" %>
    <div class='col-md-4'>
      <%= f.date_select :date_of_birth, start_year: Date.current.year, end_year: 1950 %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :gender, class: "control-label col-md-2" %>
    <div class="col-md-4">
      <% User.genders.keys.each do |gender| %>
        <%= f.radio_button :gender, gender %>
        <%= f.label gender.humanize %>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Profile picture", class: "control-label col-md-2" %>
    <div class="col-md-4">
      <%= f.file_field :profile_pic, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :current_password, class: "control-label col-md-2" %>
    <div class="col-md-4">
      <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %><span class="help-block">your current password is needed to confirm your changes)</span>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit "Update", class: "btn btn-default-reverse col-md-offset-2 col-md-1"%>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-default-reverse col-md-offset-2" %></p>

<%= link_to "Back", :back %>
