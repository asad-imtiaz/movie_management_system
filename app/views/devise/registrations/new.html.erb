<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email, class: "control-label col-md-2" %>
    <div class="col-md-4">
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "control-label col-md-2"%>
    <div class="col-md-4">
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      <% if @minimum_password_length %>
        <span class="help-block">(<%= @minimum_password_length %> characters minimum)</span>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Confirm password", class: "control-label col-md-2" %>
    <div class="col-md-4">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :first_name, class: "control-label col-md-2" %>
    <div class="col-md-4">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :last_name, class: "control-label col-md-2" %>
    <div class="col-md-4">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :date_of_birth, class: "control-label col-md-2" %>
    <div class="col-md-4 input-group">
      <%= f.text_field :date_of_birth, class: "form-control select-date" %>
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :gender, class: "control-label col-md-2" %>
    <div class="col-md-4">
      <% User.genders.keys.each do |gender| %>
        <%= f.radio_button :gender, gender %>
        <%= f.label gender.humanize %>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Profile picture", class: "control-label col-md-2" %>
    <div class="col-md-4">
      <%= f.file_field :profile_pic %>
    </div>
  </div>

  <%= f.submit "Sign up", class: "btn btn-success col-md-offset-2" %>

<% end %>
<div class="col-md-offset-10 btn btn-default">
  <%= render "devise/shared/links" %>
</div>
