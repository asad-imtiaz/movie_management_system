<%= render partial: 'shared/validation_errors', object: @actor, as: :object %>
<%= form_for [:admin, @actor], html: { class: "form-horizontal" } do |f| %>

  <div class="form-group">
    <%= f.label :name, class: "control-label col-md-2" %>
    <div class="col-md-4">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit "Add", class: "btn btn-reverse col-md-offset-2 col-md-1" %>
  </div>
<% end %>
<%= link_to "Back", admin_actors_path %>
