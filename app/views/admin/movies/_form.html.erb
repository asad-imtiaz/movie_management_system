<%= render partial: 'shared/validation_errors', object: @movie, as: :object %>
<%= form_for [:admin, @movie], html: { class: "form-horizontal" } do |f| %>

  <div class="form-group">
    <%= f.label :title, class: "control-label col-md-2" %>
    <div class="col-md-4">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :release_date, class: "control-label col-md-2" %>
    <div class="col-md-4">
      <%= f.date_select :release_date, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :trailer_link, "Trailer", class: "control-label col-md-2" %>
    <div class="col-md-4">
      <%= f.text_field :trailer_link, class: "form-control" %>
      <span class="help-block">Paste link for the trailer here</span>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "control-label col-md-2" %>
    <div class="col-md-10">
      <%= f.cktext_area :description, id: "mov_description" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :poster, "Upload Poster", class: "control-label col-md-2" %>
    <div class="col-md-4">
      <%= f.file_field :poster, class: "file-input" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-reverse col-md-offset-2 col-md-1" %>
  </div>
<% end %>
<%= link_to "Back", admin_movies_path %>

<% content_for :javascript do %>
  CKEDITOR.replace('mov_description')
<% end %>
