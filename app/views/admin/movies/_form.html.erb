<%= form_for [:admin, @movie] do |f| %>

  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <span class="error_explanation">
      <%= @movie.errors.messages[:title].join(", ") if @movie.errors[:title] %>
    </span>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit "Add" %>
  </p>

<% end %>
