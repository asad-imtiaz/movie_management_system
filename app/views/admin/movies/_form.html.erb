<%= render partial: 'shared/validation_errors', object: @movie, as: :object %>
<%= nested_form_for [:admin, @movie], html: { class: "form-horizontal", multipart: true } do |f| %>

  <div class="form-group">
    <%= f.label :title, class: "control-label col-md-2" %>
    <div class="col-md-4">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :release_date, class: "control-label col-md-2" %>
    <div class="col-md-4 input-group">
      <%= f.text_field :release_date, value: @movie.release_date.to_date, class: "form-control select-date" %>
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :trailer_link, "Trailer", class: "control-label col-md-2" %>
    <div class="col-md-4">
      <%= f.text_field :trailer_link, class: "form-control" %>
      <span class="help-block">Paste link for the trailer here</span>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :genre, class: "control-label col-md-2" %>
    <div class="col-md-4">
      <%= f.select :genre, Movie::GENRE, {}, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "control-label col-md-2" %>
    <div class="col-md-10">
      <%= f.cktext_area :description, id: "mov_description" %>
    </div>
  </div>

  <div class="posters-fields">
    <%= f.fields_for :posters do |builder| %>
      <%= render 'admin/movies/poster_field', builder: builder %>
    <% end %>
    <%= f.link_to_add "Add poster", :posters %>
  </div>

  <div class="form-group">
    <%= f.label "Select Actors", class: "control-label col-md-2" %>
    <div class="col-md-4">
      <%= f.collection_select :actor_ids, @actors, :id, :name, {}, multiple: true, class: 'form-control chosen-select' %>
    </div>
  </div>

  <%= f.submit "Submit", class: "btn btn-success col-md-offset-2" %>

<% end %>
<%= link_to "Back", back_to_movie_path(@movie) %>
