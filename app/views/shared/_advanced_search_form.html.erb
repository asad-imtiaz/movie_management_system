<div id="search-modal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title text-center">Advanced Movies Search</h4>
      </div>
      <div class="modal-body">
        <%= form_tag link_to_movies_list, method: :get do %>
          <div class="form-group">
            <%= text_field_tag :movie, "", placeholder: "Movie", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= text_field_tag :actor, "", placeholder: "Actor", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= select_tag :genre, options_for_select(Movie::GENRE), prompt: "Genre", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= button_tag type: :submit, class: "col-sm-offset-5 col-sm-2 btn btn-success" do %>
              Search <span class="glyphicon glyphicon-search"></span>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>
