<div class="well">
  <div class="title">
    <p><%= movie.title %></p> 
    <p>Rating: <%= movie.rating %></p>
  </div>
  <div>
    Description: <br/>
    <%= movie.description %>
  </div>
  <div>
    <% if user_signed_in? and current_user.admin? %>
      <%= link_to "Edit", edit_admin_movie_path(movie) %>
      <%= link_to "Delete", admin_movie_path(movie), method: :delete,
        data: {confirm: "Are you sure?"} %>
    <%end%>
  </div>
</div>
