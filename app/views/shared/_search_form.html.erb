<%= form_tag link_to_movies_list, class: "navbar-form", method: :get do %>
  <div class="input-group">
    <%= text_field_tag :search, "", placeholder: "Search All", class: "form-control" %>
    <div class="input-group-btn">
      <%= button_tag type: :submit, class: "btn btn-default" do %>
        <i class="glyphicon glyphicon-search"></i>
      <% end %>
    </div>
  </div>
<% end %>
